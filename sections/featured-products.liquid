<section class="products">
  <div class="products__grid">
    {% for product in products %}
      <div class="product-card{% if forloop.index > 4 %} is-hidden{% endif %}">
        <div class="product-card__image-wrapper">
          <img class="product-card__image" src="/assets/{{ product.image }}" alt="{{ product.title }}" />
        </div>

        <div class="product-card__info">
          <div class="product-card__row">
            <div class="product-card__text">
              <h3 class="product-card__title">{{ product.title }}</h3>
              <p class="product-card__price">${{ product.price }} USD</p>
            </div>
            <button class="product-card__cart-btn" aria-label="Add to cart">
              <img src="/assets/cart.svg" alt="Cart icon" />
            </button>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  <div class="products__footer">
    <button class="products__btn" id="toggleProducts">VIEW ALL</button>
  </div>
</section>