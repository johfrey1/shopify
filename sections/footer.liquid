<footer class="footer">
  <div class="footer__container">

    <!-- Columna izquierda: Logo + info -->
    <div class="footer__column footer__column--left">
      <div class="footer__logo">{{ section.settings.logo_text }}</div>
      <p class="footer__text">© 2024, Shuffle.store Operated by Studio Plaid. Need help?<br />
        Email support@shuffle.store
      </p>
    </div>

    <!-- Columna central: enlaces -->
    <div class="footer__column footer__column--center">
      <nav class="footer__nav">
        {% assign primary_links = section.settings.links | slice: 0, 4 %}
        {% assign secondary_links = section.settings.links | slice: 4, 3 %}

        <div class="footer__nav-group footer__nav-group--primary">
          {% for link in primary_links %}
            <a href="{{ link.url }}">{{ link.label | upcase }}</a>
          {% endfor %}
        </div>

        <div class="footer__nav-group footer__nav-group--secondary">
          {% for link in secondary_links %}
            <a href="{{ link.url }}">{{ link.label | upcase }}</a>
          {% endfor %}
        </div>
      </nav>

      <p class="footer__payments-note">
        We accept all major cards, PayPal & crypto
        <img src="/assets/bitcoin.svg" alt="Bitcoin" />
        <img src="/assets/ethereum.svg" alt="Ethereum" />
        <img src="/assets/litecoin.svg" alt="Litecoin" />
        <img src="/assets/dogecoin.svg" alt="Dogecoin" />
        <img src="/assets/usdc.svg" alt="USDC" />
      </p>
    </div>

    <!-- Columna derecha: Newsletter + redes -->
    <div class="footer__column footer__column--right">
      <label for="newsletter" class="footer__label">Subscribe and receive drop notifications</label>
      <div class="footer__newsletter">
        <input type="email" id="newsletter" placeholder="Enter Email" disabled />
        <button class="footer__submit">→</button>
      </div>

      <div class="footer__socials">
        <a href="#">FACEBOOK</a>
        <a href="#">X(TWITTER)</a>
        <a href="#">INSTAGRAM</a>
      </div>
    </div>

  </div>
</footer>